<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    android:paddingLeft="16dp"
    android:paddingTop="200dp"
    android:paddingRight="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/textoEmail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:hint="@string/email"
        android:paddingStart="16dp" />

    <EditText
        android:id="@+id/textoSenha"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/textoEmail"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:hint="@string/senha"
        android:paddingStart="16dp" />

    <Button
        android:id="@+id/idBotao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textoSenha"
        android:backgroundTint="@color/cinza"
        android:layout_marginTop="16dp"
        android:text="@string/login"
        android:textColor="@color/teal_700" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idBotao"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:text="@string/textCadastro"/>

</RelativeLayout>